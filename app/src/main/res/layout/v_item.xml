<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/trans">

    <LinearLayout
        android:id="@+id/ll_item_v"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@drawable/background_white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="10dp">


        <ImageView
            android:id="@+id/iv_item_v"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:contentDescription="@string/item"

            android:src="@drawable/dairies" />


        <TextView
            android:id="@+id/tv_name_item_v"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp" />


        <Spinner

            android:id="@+id/s_item_v"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/my_spinner_style"
            android:paddingBottom="5dp"
            android:visibility="gone" />

        <EditText
            android:id="@+id/et_weight_item_v"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_white"
            android:hint="@string/type_weight"
            android:importantForAutofill="no"
            android:inputType="numberDecimal"
            android:padding="5dp"
            android:textColor="@color/purple_700"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_out_add_item_v"
            style="@style/button_style"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="0dp"
            android:padding="10dp"
            android:backgroundTint="@color/gray"
            android:text="@string/out_of_stock"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_add_item_v"
            style="@style/button_style"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="0dp"
            android:backgroundTint="@color/teal_200"
            android:text="@string/add"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ll_num_item_v"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/background_red_no_ripp"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:visibility="gone">



            <ImageView
                android:id="@+id/iv_plus_item_v"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:padding="10dp"
                android:layout_height="match_parent"
                android:contentDescription="@string/plus"
                android:src="@drawable/ic_plus"
                app:tint="@color/white" />


            <TextView
                android:id="@+id/tv_count_item_v"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                tools:ignore="NestedWeights" />
            <ImageView
                android:id="@+id/iv_minus_item_v"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:padding="10dp"
                android:layout_height="match_parent"
                android:contentDescription="@string/minus"
                android:src="@drawable/ic_minus"
                app:tint="@color/white" />




        </LinearLayout>
    </LinearLayout>

</LinearLayout>